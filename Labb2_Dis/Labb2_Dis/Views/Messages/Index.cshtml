@model IEnumerable<Labb2_Dis.Models.Message>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>     
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.From)*@
            @Html.ActionLink(item.From, "MessagesFromUser", new { username = item.From })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Title)*@
            @Html.ActionLink(item.Title, "ShowMessage", new { id = item.MessageId })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MessageId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MessageId })
        </td>
    </tr>
}

</table>

<div>
    @{int readMessages = 0;
        int removedMessages = 0;
        foreach (var item in Model)
        {
            if (item.isRead)
            {
                readMessages++;
            }
            if(item.IsRemoved)
            {
                removedMessages++;
            }
        }
    }
    Messages: @Model.Count()
</div>
<div>
    Read messages: @readMessages
</div>
<div>
    Removed Messages: @removedMessages
</div>

