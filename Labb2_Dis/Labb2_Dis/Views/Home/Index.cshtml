@model Labb2_Dis.Models.UserViewModel
@{
    ViewBag.Title = "Home Page";
}

<h2>Home</h2>
<div>
    <h4>User information</h4>
    <hr />
    <b>Username:</b> @Html.DisplayFor(model => model.Username)<br />
    <b>Email:</b> @Html.DisplayFor(model => model.email)<br />
    <b>Last login:</b> @Html.DisplayFor(model => model.lastLogin)<br />
    <b>Logins this month:</b> @Html.DisplayFor(model => model.NoOfLoginsThisMOnth)<br />
    <b>Number of unread messages:</b> @Html.DisplayFor(model => model.NoOfUnreadMessages)<br />

</div>



